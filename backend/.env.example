# MergeMeet 環境變數設定

# 環境設定（development / production / test）
ENVIRONMENT=development

# 專案資訊
PROJECT_NAME=MergeMeet
VERSION=1.0.0
API_V1_PREFIX=/api

# 資料庫連接
DATABASE_URL=postgresql+asyncpg://mergemeet:YOUR_DB_PASSWORD_HERE@localhost:5432/mergemeet

# 測試資料庫（選用，測試時會自動使用）
TEST_DATABASE_URL=postgresql+asyncpg://mergemeet:YOUR_DB_PASSWORD_HERE@localhost:5432/mergemeet_test

# 資料庫連線池設定
# pool_size: 基礎連接數（建議：開發環境 5-10，生產環境 10-20）
# max_overflow: 最大溢出連接數（建議：開發環境 10，生產環境 20-50）
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis（目前未使用，保留供未來多伺服器部署時整合）
REDIS_URL=redis://localhost:6379/0

# JWT 密鑰（⚠️ 生產環境請務必更換！使用 openssl rand -hex 32 生成）
SECRET_KEY=your-secret-key-change-this-in-production-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS（生產環境請更換為實際域名）
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# 檔案上傳
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=uploads

# WebSocket 訊息限制（字符數）
MAX_MESSAGE_LENGTH=2000

# 快取 TTL 設定（秒）
CACHE_TTL_SENSITIVE_WORDS=300

# ========================================
# Email 服務配置 (Mailpit 開發環境)
# ========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=mergemeet
SMTP_PASSWORD=any-password
SMTP_FROM_EMAIL=noreply@mergemeet.com
SMTP_FROM_NAME=MergeMeet
SMTP_TLS=false

# 前端 URL (用於生成重置密碼鏈接)
FRONTEND_URL=http://localhost:5173

# 密碼重置 Token 有效期 (分鐘)
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30

